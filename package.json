{
  "name": "comercio-negocios-latam-backend",
  "version": "1.0.0",
  "description": "Backend API para Comercio y Negocios Latam SAC",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:verbose": "npm test -- --verbose",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "husky install",
    "build": "node scripts/minify.js",
    "build:production": "NODE_ENV=production node scripts/minify.js",
    "generate-icons": "node scripts/generate-pwa-icons.js"
  },
  "keywords": [
    "api",
    "express",
    "nodemailer",
    "contact-form"
  ],
  "author": "Comercio y Negocios Latam SAC",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dompurify": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "resend": "^6.7.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "clean-css-cli": "^5.6.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "supertest": "^7.2.2",
    "terser": "^5.44.1"
  }
}
